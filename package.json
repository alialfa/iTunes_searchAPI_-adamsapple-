{
  "name": "server",
  "version": "1.0.0",
  "description": "backend-server interfacing with iTunes API",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "server": "nodemon ./bin/www",
    "test": "mocha",
    "client": "cd client && npm run start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "ali_mongi",
  "dependencies": {
    "body-parser": "1.19.0",
    "concurrently": "5.2.0",
    "config": "3.3.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "helmet": "3.23.3",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "node-fetch": "2.6.0",
    "request": "2.88.2"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "mocha": "8.4.0",
    "nodemon": "2.0.4",
    "supertest": "4.0.2"
  },
  "engines": {
    "node": "12.15.0",
    "npm": "6.14.5"
  }
}
